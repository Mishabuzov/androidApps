<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAuthorization"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30"
        android:paddingTop="@dimen/padding_20"
    >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/error_image"
            android:layout_width="@dimen/icons_size_large_width"
            android:layout_height="@dimen/icons_size_large_height_130"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/kek8"
            app:riv_corner_radius="@dimen/corner_rad_30"
            app:riv_oval="false"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondText"
                android:hint="@string/login.authorization"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/black_text"
                android:textColorHint="@color/colorSecondText"
                android:textSize="@dimen/text.18" />

        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
        >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorSecondText"
                    android:hint="@string/password.authorization"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/colorSecondText"
                    android:textSize="@dimen/text.18" />

            </android.support.design.widget.TextInputLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/colorAuthorizationDark"
                android:text="@string/signin.authorization"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text.18" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/my_register_button"
                android:text="@string/register.authorization"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text.18" />

            <Button
                android:id="@+id/lets_go_button"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/miss.authorization"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text.18"
            />

        </LinearLayout>

    </LinearLayout>

</ScrollView>