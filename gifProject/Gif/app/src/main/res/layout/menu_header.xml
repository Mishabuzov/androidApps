<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/color_nav_header"
    android:padding="16dp"
    android:paddingLeft="@dimen/padding_20"
    android:paddingStart="@dimen/padding_20"
    android:paddingRight="@dimen/padding_20"
    android:paddingEnd="@dimen/padding_20"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
    >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/logo_iv"
            android:layout_width="@dimen/icons_size_60"
            android:layout_height="@dimen/icons_size_60"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/corner_rad_30"
            app:riv_oval="false"
            android:src="@drawable/logo"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/logo_iv"
            android:layout_toRightOf="@+id/logo_iv"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/text.18"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:text="@string/app_name"
        />

    </RelativeLayout>

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/text.18"
        tools:text="@string/welcome_msg"
        android:visibility="gone"
    />

</RelativeLayout>
