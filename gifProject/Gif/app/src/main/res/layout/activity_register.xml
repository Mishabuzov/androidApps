<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30"
    >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/error_image_reg"
            android:layout_width="@dimen/icons_size_large_width"
            android:layout_height="@dimen/icons_size_large_height_170"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_20"
            app:riv_corner_radius="@dimen/corner_rad_30"
            app:riv_oval="false"
            android:src="@drawable/kek"
        />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <EditText
                android:id="@+id/text_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondText"
                android:hint="@string/register.login"
                android:lines="1"
                android:maxLines="1"
                android:textSize="@dimen/text.20"
            />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <EditText
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondText"
                android:hint="@string/register.email"
                android:lines="1"
                android:maxLines="1"
                android:textSize="@dimen/text.20"
                android:inputType="textEmailAddress"
            />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondText"
                android:hint="@string/password.authorization"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:textSize="@dimen/text.20"
            />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/finish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_22"
            android:background="@drawable/my_register_button"
            android:text="@string/register.authorization"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text.18"
        />

    </LinearLayout>
</ScrollView>