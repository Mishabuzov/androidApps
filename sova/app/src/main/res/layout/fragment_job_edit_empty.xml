<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/country_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
            >

                <com.fsep.sova.textviews.RobotoRegularTextView
                    android:id="@+id/country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/education_country"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="18sp"
                />

                <Button
                    android:id="@+id/arrow_country"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_arrow"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
            >

                <com.fsep.sova.textviews.RobotoRegularTextView
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/education_city"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="18sp"
                />

                <Button
                    android:id="@+id/arrow_city"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_arrow"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/company_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
            >

                <com.fsep.sova.textviews.RobotoRegularTextView
                    android:id="@+id/company_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/job_company_name"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="18sp"
                />

                <Button
                    android:id="@+id/arrow_education_name"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gray_arrow"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/job_post_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
            >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/job_post_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabelForEditingEducationAndJob"
                >

                    <EditText
                        android:id="@+id/job_post_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/job_post"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/secondary_text_color"
                        android:textSize="18sp"
                    />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/job_begin_year_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
            >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/begin_year_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabelForEditingEducationAndJob"
                >

                    <EditText
                        android:id="@+id/job_begin_year_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/education_begin_year"
                        android:inputType="number"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/secondary_text_color"
                        android:textSize="18sp"
                    />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/current_edu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
            >

                <com.fsep.sova.textviews.RobotoRegularTextView
                    android:id="@+id/current_edu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/job_is_current"
                    android:textColor="@color/black_text"
                    android:textSize="18sp"
                />

                <Switch
                    android:id="@+id/current_job_switch"
                    android:theme="@style/switch_pink"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/profile_education_line_color"
            />

            <RelativeLayout
                android:id="@+id/job_end_year_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
            >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/end_year_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabelForEditingEducationAndJob"
                >

                    <EditText
                        android:id="@+id/job_end_year_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="@string/education_end_year"
                        android:inputType="number"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/secondary_text_color"
                        android:textSize="18sp"
                    />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>