<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/photo_layout"
                android:layout_marginTop="@dimen/micro_image_marginTop"
                android:layout_width="@dimen/add_task_photo_width"
                android:layout_height="@dimen/add_task_photo_height"
                android:orientation="vertical"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ticket_media"
        android:layout_width="@dimen/add_task_photo_width"
        android:layout_height="@dimen/add_task_photo_width"
        android:scaleType="centerCrop"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/image_cover"
        app:riv_corner_radius="8dip"
        tools:src="@drawable/stalin"
        />


    <!--todo set button style-->
    <ImageView
        android:id="@+id/ticket_image_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/photo_image_bg"
        android:src="@drawable/delete_image"
        android:scaleType="center"
        />
</RelativeLayout>
