    <include layout="@layout/toolbar"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_below="@+id/toolbar"
                  android:background="@android:color/white"
    >

        <RelativeLayout
            android:id="@+id/edu_lvl_medium_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
        >

            <com.fsep.sova.textviews.RobotoRegularTextView
                android:id="@+id/edu_lvl_medium_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/education_lvl_medium"
                android:textColor="@color/black_text"
                android:textSize="20sp"
            />

            <ImageView
                android:id="@+id/edu_medium_ok"
                android:layout_width="@dimen/icons_size.small"
                android:layout_height="@dimen/icons_size.small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_check"
                android:visibility="gone"
            />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/profile_education_line_color"
        />

        <RelativeLayout
            android:id="@+id/edu_lvl_hard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
        >

            <com.fsep.sova.textviews.RobotoRegularTextView
                android:id="@+id/edu_lvl_hard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/education_lvl_hard"
                android:textColor="@color/black_text"
                android:textSize="20sp"
            />

            <ImageView
                android:id="@+id/edu_hard_ok"
                android:layout_width="@dimen/icons_size.small"
                android:layout_height="@dimen/icons_size.small"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_check"
                android:visibility="gone"
            />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/profile_education_line_color"
        />

    </LinearLayout>

