<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbar_color2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/item_avatar_size"
                android:layout_height="@dimen/item_avatar_size"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dip"
                app:riv_oval="false"
                tools:src="@drawable/stalin"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/avatar"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical"
                >

                <com.fsep.sova.textviews.RobotoMediumTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="Name and Surname"
                    android:textColor="@color/black_text"
                    />

                <com.fsep.sova.textviews.RobotoRegularTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="Date"
                    android:textColor="@color/secondary_text"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/status_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vertical_dots"
                style="?attr/borderlessButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:minWidth="1dp"
                android:minHeight="1dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/label_status_color"
                android:layout_width="@dimen/chat_label_circle_dimens"
                android:layout_height="@dimen/chat_label_circle_dimens"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:src="@color/chat_in_progress_status"
                app:riv_corner_radius="30dip"
                app:riv_oval="false"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

        </RelativeLayout>

        <com.fsep.sova.textviews.RobotoRegularTextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/main_display.second_text_example"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:visibility="gone"
            />

        <GridLayout
            android:id="@+id/grid_for_images"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/documents_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:visibility="gone"
            />

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>