<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/network_error_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
        android:gravity="center" android:padding="16dp">

        <TextView
            android:id="@+id/tv_network_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/error_loading_message"
            android:textColor="@color/secondary_text"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/btn_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_network_error_message"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/reload"
            android:textColor="@color/king_blue"
            android:textSize="18sp"/>
    </RelativeLayout>

</RelativeLayout>